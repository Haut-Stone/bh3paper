/* pages/supplyList/supplyList.wxss */
.supplyList{
  width: 96%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.section{
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
}

.supply{
  width: 160rpx;
  height: 160rpx;
  border: 2px solid #fff;
  border-top: 4px solid #fff;
  border-bottom: 12px solid #fff;
  border-radius: 10%;
  overflow: hidden;
  color: #fff;
  box-sizing: border-box;
}

.supplyImage{
  width: 100%;
  height: 100%;
  border-radius: 10%;
}
.number{
  width: 130rpx;
  height: 40rpx;
  background-color: #fff;
  position: relative;
  top: -20rpx; 
  border-radius: 10rpx;
  font-size: 12px;
  text-align: center
}

.section__title{
  display: flex;
  font-size: 15px;
  font-style: italic;
  letter-spacing: -1px;
  justify-content: center;
}
.section__title2{
  display: flex;
  font-size: 15px;
  font-style: italic;
  letter-spacing: -1px;
  justify-content: center;
}
.toSupplyView{
  margin-top: 20rpx;
  width:80%;
  height:9%;
}
.toSupplyBtn{
 width:40%;
  background: #ffe14b;
  font-weight: 700;
}
.leftBtn{
  float:left;
}
.rightBtn{
  float:right;
}

.section-title{
  font-family: Arial, Helvetica, sans-serif;
  font-style: italic;
  font-weight: bold;
}